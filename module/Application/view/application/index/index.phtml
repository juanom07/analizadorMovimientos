    ];

    Object.keys(cantidadesMovimiento).forEach(function(key){
        console.log(key + '=' + cantidadesMovimiento[key]);
        var elemento = [key, Math.abs(cantidadesMovimiento[key])];

        arrDatos.push(elemento);
    });

    var data = google.visualization.arrayToDataTable(arrDatos);

    var options = {
    title: 'Pesos $AR por Tipo de Movimiento'
    };

    var chart = new google.visualization.PieChart(document.getElementById('piechart'));

    chart.draw(data, options);
}

